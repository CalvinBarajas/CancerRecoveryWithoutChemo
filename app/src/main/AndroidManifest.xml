<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eliminategarbage.cancerrecoverywithoutchemo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Introduction"
            android:label="@string/m_introduction">
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITY_INTRODUCTION" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WhyMe"
            android:label="@string/m_why_me">
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITY_WHYME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FindProvider"
            android:label="@string/m_find_provider">
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITY_FINDPROVIDER" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LifestyleChanges"
            android:label="@string/m_lifestyle_changes">
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITY_LIFESTYLECHANGES" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Recovery"
            android:label="@string/m_recovery">
            <intent-filter>
                <action android:name="android.intent.action.ACTIVITY_RECOVERY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
